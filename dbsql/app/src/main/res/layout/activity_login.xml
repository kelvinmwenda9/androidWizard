<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ECE1E1"
    android:layout_height="match_parent"
    tools:context=".login">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="200dp"
        android:outlineAmbientShadowColor="@color/colorPrimary"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/back1" />

    <EditText
        android:id="@+id/username3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawableLeft="@drawable/ic_action_us1"
        android:layout_marginTop="210dp"
        android:hint="Enter Username"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/password3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="270dp"
        android:hint="Enter Password"
        android:drawableLeft="@drawable/ic_action_us2"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:inputType="textPassword"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register Here"
        android:id="@+id/reg"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:linksClickable="true"
        android:layout_marginTop="450dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/btnlogin1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:background="#BAF3BB"
        android:shadowRadius="@android:integer/config_longAnimTime"
        android:text="Login" />



</RelativeLayout>